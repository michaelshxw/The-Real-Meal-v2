<div class="row">
  <div class="col" id="leftScreen">
    <h2>Welcome Back!</h2>
    <form class="login-form">
      <div class="mb-3">
        <label for="email-login" class="form-label">Email address:</label>
        <input type="email" class="form-control" id="email-login">
      </div>
      <label for="password-login" class="form-label">Password:</label>
      <input type="password" id="password-login" class="form-control">
      <br>
      <button type="submit" class="btn btn-secondary">Login</button>
    </form>
  </div>

  <div class="col" id="rightScreen">
    <h2>New Here?</h2>
    <p>Sign up below!</p>
    {{!-- social icons - use FontAwesome --}}
    <div class="social-icons">
      <button class="btn btn-primary">Facebook Btn</button>
      <button class="btn btn-warning">Google Btn</button>
    </div>
    <br>
    <p>Or use your email...</p>
    {{!-- input --}}
    <form class="signup-form">
      <div class="mb-3">
        <label for="email-signup">Email:</label>
        <input class="form-control" type="email" id="email-signup"/>
      </div>
      <div class="mb-3">
        <label for="username-signup" class="form-label">Name:</label>
        <input class="form-control" type="username" id="username-signup"/>
      </div>
      <div class="mb-3">
        <label for="password-signup">Password:</label>
        <input class="form-control" type="password" id="password-signup"/>
      </div>
      <div class="mb-3">
        <button class="btn btn-secondary" type="submit">signup</button>
      </div>
    </form>

  </div>
</div>

<script src="../js/login.js"></script>
