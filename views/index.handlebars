<div class="row">
  <div class="col" id="leftScreen">
    <h1>Welcome Back!</h1>
    <form class="login-form">
      <div class="mb-3">
        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email Address">
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-secondary" id="loginBtn">Login</button>
    </form>
  </div>
  <div class="col" id="rightScreen">
    <h2>New Here?</h2>
    <p>Sign up below!</p>
    {{!-- social icons - use FontAwesome --}}
    <div class="social-icons">
      <button class="btn btn-primary">Facebook Btn</button>
      <button class="btn btn-warning">Google Btn</button>
    </div>
    <br>
    {{!-- input --}}
    <form>
      <div class="mb-3">
        <input type="email" class="form-control" placeholder="Email Address">
      </div>
      <div class="mb-3">
        <input type="username" class="form-control" placeholder="Username">
      </div>
      <div class="mb-3">
        <input type="password" class="form-control" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-secondary" id="signUpBtn">Sign Up</button>
    </form>

  </div>
</div>
