<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./assets/css/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <title>The Real Meal App: Sign Up</title>
</head>

<body>
    <!-- Screen 1 - register now and later -->
    <section class="signup">
        <div class="screen one">
            <h1 class="signupheader">Welcome to</h1>
            <h2 class="signupheader" id="signupmargin">The Real Meal</h2>

            <div>
                <div class="buttons">
                    <button class="button is-medium" type="button" id="reg-now">Register Now</button>
                    <a class="button is-medium" type="button" id="reg-later" href="./c.create_meal_plan.html">Register Later</a>
                </div>
            </div>
        </div>

        <!-- form container -->

        <!-- Screen 2 - personal details -->
        <div class="screen two container" style="width: 400px;">
            <h3 class="subtitle is-1">Let us get to know you!</h3>
            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" type="text" placeholder="e.g John Smith" id="nameValue">
                </div>
            </div>
            <div class="field">
                <label class="label">Age</label>
                <div class="control">
                    <div class="select">
                        <select class="input" id="ageValue">
                            <option></option>
                            <option>18-22</option>
                            <option>23-29</option>
                            <option>30-39</option>
                            <option>40-49</option>
                            <option>50-59</option>
                            <option>60-69</option>
                            <option>70-79</option>
                            <option>80-89</option>
                            <option>90-99</option>
                            <option>99+</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="field">
                <label class="label">Height</label>
                <div class="control">
                    <input class="input" type="text" placeholder="e.g 183cms" id="heightValue">
                </div>
            </div>
            <div class="field">
                <label class="label">Weight</label>
                <div class="control">
                    <input class="input" type="text" placeholder="e.g 96kgs" id="weightValue">
                </div>
            </div>
            <div class="field">
                <label class="label">Gender</label>
                <div class="control">
                    <div class="select">
                        <select class="input" id="genderValue">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                            <option>Prefer not to say</option>
                        </select>
                    </div>
                </div>
            </div>
            <br>
            <div class="">
                <div class="button is-medium" id="cancelone">
                    <p>Cancel</p>
                </div>
                <div class="button is-medium" id="nextBtnOne">
                    <p>Next</p>
                </div>
            </div>
        </div>

        <!-- Screen 3 - more info -->
        <div class="screen three container" style="width: 600px;">
            <h3 class="subtitle is-1">Tell us some more!</h3>
            <div class="select is-multiple">
                <label class="label">Activity Level</label>
                <select class="input" multiple size="4" style="width: 400px" id="activityValue">
                    <option value="Sedentary">Sedentary</option>
                    <option value="Lightly Active">Lightly Active</option>
                    <option value="Moderately Active">Moderately Active</option>
                    <option value="Highly Active">Highly Active</option>
                </select>
            </div>
            <br>
            <br>
            <div class="select is-multiple">
                <label class="label">What's your goal?</label>
                <select class="input" multiple size="3" style="width: 400px" id="goalValue">
                    <option value="Lose Weight">Lose Weight</option>
                    <option value="Maintain Weight">Maintain Weight</option>
                    <option value="Increase Weight">Increase Weight</option>
                </select>
            </div>
            <br>
            <br>
            <div class="select is-multiple">
                <label class="label">Do you have any dietary preferences?</label>
                <select class="input" multiple size="6" style="width: 400px" id="dietaryValue">
                    <option value="none">None</option>
                    <option value="choose-later">Choose Later</option>
                    <option value="gluten-free">Gluten Free</option>
                    <option value="vegetarian">Vegetarian</option>
                    <option value="vegan">Vegan</option>
                    <option value="lacto-vegetarian">Lacto-Vegetarian</option>
                    <option value="ovo-vegetarian">Ovo-Vegetarian</option>
                    <option value="pescetarian">Pescetarian</option>
                    <option value="paleo">Paleo</option>
                    <option value="primal">Primal</option>
                </select>
            </div>
            <br><br>
            <div>
                <div class="button is-medium" id="canceltwo">
                    <p>Cancel</p>
                </div>
                <div class="button is-medium" id="nextBtnTwo">
                    <p>Next</p>
                </div>
            </div>
        </div>

        <!-- Screen 4 - allergens -->
        <div class="screen four container" style="width: 600px;">
            <h3 class="subtitle is-1">And most importantly...</h3>
            <div class="select is-multiple">
                <label class="label">Do you have any allergies?</label>
                <select class="input" multiple size="8" style="width: 400px" id="allergyValue">
                    <option value="Dairy">Dairy</option>
                    <option value="Eggs">Eggs</option>
                    <option value="Gluten">Gluten</option>
                    <option value="Grain">Grains</option>
                    <option value="Peanuts">Peanuts</option>
                    <option value="Seafood">Seafood</option>
                    <option value="Sesame">Sesame</option>
                    <option value="Shellfish">Shellfish</option>
                    <option value="Soy">Soy</option>
                    <option value="Sulfite">Sulfites</option>
                    <option value="Tree Nuts">Tree Nuts</option>
                    <option value="Wheat">Wheat</option>
                </select>
            </div>
            <br><br>
                <div class="button is-medium" id="cancelthree">
                    <p>Cancel</p>
                </div>
                <a class="button is-medium" id="nextBtnThree">Submit</a>
        </div>
    </section>

    <!-- script links -->
    <script src="./assets/js/test.js"></script>
</body>

</html>